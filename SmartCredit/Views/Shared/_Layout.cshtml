<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link asp-href-include="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link asp-href-include="~/lib/css/mainStyle.css" rel="stylesheet"/>
    </head>
<body class="m-1 p-1">
    <!--HEADER WITH LINKS-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="~/images/brand.png" width="30" height="30" class="d-inline-block align-top" alt="" />
            SmartCredit
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
